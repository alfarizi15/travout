<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_main"
    android:orientation="horizontal"


    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/MT"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="T R A V O U T"
    android:textAlignment="center"
    android:layout_centerHorizontal="true"
    android:textSize="40dp"
    android:textColor="@color/white"
    />

    <ImageView
        android:layout_width="2px"
        android:layout_height="400dp"
        android:background="@color/grey"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/grey"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/train"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking kereta"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:background="@color/white"
        android:padding="2dp"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="240dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/car"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sewa mobil"
        android:background="@color/white"
        android:layout_marginTop="350dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:padding="2dp"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/newspaper"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berita Kota"
        android:background="@color/white"
       android:layout_marginTop="580dp"
        android:layout_marginLeft="60dp"
        android:padding="2dp"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="450dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bed"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sewa Kamar"
        android:background="@color/white"
        android:layout_marginTop="580dp"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        />

    <View
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"


        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/user"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="110dp"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/clock"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp"
        />
    <ImageView
        android:layout_width="2px"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        />
</RelativeLayout>
